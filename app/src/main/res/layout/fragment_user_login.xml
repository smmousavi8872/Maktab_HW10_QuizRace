<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.smmousavi.maktab_hw10_quizrace.mvc.controller.fragments.UserLoginFragment">

  <ImageView
    android:id="@+id/login_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:background="@drawable/login_logo"/>

  <TextView
    android:id="@+id/txt_sign_up_username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/login_logo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:text="USERNAME"
    android:textColor="#f36b00  "
    android:textSize="18dp"/>

  <EditText
    android:id="@+id/edt_sign_up_username"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt_sign_up_username"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-7dp"
    android:backgroundTint="#f36b00 "/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/edt_sign_up_username"
    android:layout_marginBottom="5dp"
    android:layout_toStartOf="@id/edt_sign_up_username"
    android:background="@drawable/ic_user"/>

  <TextView
    android:id="@+id/txt_sign_up_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/edt_sign_up_username"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="PASSWORD"
    android:textColor="#f36b00"
    android:textSize="18dp"/>

  <EditText
    android:id="@+id/edt_sign_up_password"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt_sign_up_password"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-7dp"
    android:backgroundTint="#f36b00"
    android:inputType="textPassword"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/edt_sign_up_password"
    android:layout_marginBottom="5dp"
    android:layout_toStartOf="@id/edt_sign_up_password"
    android:background="@drawable/ic_padlock"/>

  <Button
    android:id="@+id/login_button"
    android:layout_width="270dp"
    android:layout_height="35dp"
    android:layout_below="@+id/edt_sign_up_password"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:background="@drawable/general_button_style"
    android:text="Login"
    android:textColor="#fff"
    android:textSize="19dp"/>

  <TextView
    android:id="@+id/txt_login_no_account_yet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/login_button"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:text="NO ACCOUNT YET?"
    android:textColor="#f36b00 "/>

  <Button
    android:id="@+id/btn_login_sign_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt_login_no_account_yet"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-7dp"
    android:background="#00ffffff"
    android:text="SIGN UP"
    android:textColor="#f36b00 "
    android:textStyle="bold"/>


  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:text="Read Agreements and Terms of Policy Here"
    android:textColor="#f36b00 "/>


</RelativeLayout>
