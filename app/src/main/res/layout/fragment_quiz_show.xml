<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="10dp"
  tools:context=".mvc.controller.fragments.QuizShowFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/txt_user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Username: Mohsen"
      android:textSize="18dp"/>

    <TextView
      android:id="@+id/txt_total_score"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Score: 143"
      android:textSize="18dp"/>

    <TextView
      android:id="@+id/txt_level"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Level: 2"
      android:textSize="18dp"/>

    <TextView
      android:id="@+id/txt_user_spicification"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:text="Question Number: 2"
      android:textSize="18dp"/>


  </LinearLayout>

  <TextView
    android:id="@+id/txt_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/answer_upper_layer"
    android:layout_marginBottom="24dp"
    android:text="question number one is being shown in this text viiew"
    android:textSize="18dp"/>

  <LinearLayout
    android:id="@+id/answer_upper_layer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/answer_lower_layer"
    android:orientation="horizontal">

    <Button
      android:id="@+id/answer_three"
      style="@style/option_button_style"
      android:text="Option 1"/>

    <Button
      android:id="@+id/answer_four"
      style="@style/option_button_style"
      android:text="Option 2"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/answer_lower_layer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp">

    <Button
      android:id="@+id/answer_one"
      style="@style/option_button_style"
      android:text="Option 3"/>

    <Button
      android:id="@+id/answer_two"
      style="@style/option_button_style"
      android:layout_margin="3dp"
      android:text="Option 4"/>

  </LinearLayout>

</RelativeLayout>