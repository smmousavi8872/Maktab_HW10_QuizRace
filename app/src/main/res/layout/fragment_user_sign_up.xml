<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.smmousavi.maktab_hw10_quizrace.mvc.controller.fragments.UserLoginFragment">


  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="60dp"
    android:background="@drawable/border"
    android:padding="20dp">

    <TextView
      android:id="@+id/txt_sign_up_welcome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="30dp"
      android:layout_marginTop="60dp"
      android:text="@string/sign_up_welcome_text"
      android:textColor="@color/app_orange_color"
      android:textSize="26dp"
      android:textStyle="bold"/>

    <ImageView
      android:id="@+id/sign_up_logo"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="30dp"
      android:layout_marginTop="25dp"
      android:background="@drawable/login_logo"/>


    <TextView
      android:id="@+id/txt_sign_up_user_warn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/sign_up_logo"
      android:layout_margin="20dp"
      android:gravity="center"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/txt_sign_in_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_sign_up_welcome"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="100dp"
      android:text="USERNAME"
      android:textColor="#f36b00"
      android:textSize="18dp"/>

    <EditText
      android:id="@+id/edt_sign_in_username"
      android:layout_width="210dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_sign_in_username"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-7dp"
      android:backgroundTint="#f36b00 "
      android:textColor="#fff"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/edt_sign_in_username"
      android:layout_marginBottom="5dp"
      android:layout_toStartOf="@id/edt_sign_in_username"
      android:background="@drawable/ic_user"/>

    <TextView
      android:id="@+id/txt_sign_in_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edt_sign_in_username"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:text="PASSWORD"
      android:textColor="#f36b00"
      android:textSize="18dp"/>

    <EditText
      android:id="@+id/edt_sign_in_password"
      android:layout_width="210dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_sign_in_password"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-7dp"
      android:backgroundTint="#f36b00"
      android:inputType="textPassword"
      android:textColor="#fff"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/edt_sign_in_password"
      android:layout_marginBottom="5dp"
      android:layout_toStartOf="@id/edt_sign_in_password"
      android:background="@drawable/ic_padlock"/>


    <TextView
      android:id="@+id/txt_sign_up_repeat_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edt_sign_in_password"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:text="REAPTE PASSWORD"
      android:textColor="#f36b00"
      android:textSize="18dp"/>

    <EditText
      android:id="@+id/edt_sign_up_repeat_password"
      android:layout_width="210dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_sign_up_repeat_password"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-7dp"
      android:backgroundTint="#f36b00"
      android:inputType="textPassword"
      android:textColor="#fff"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/edt_sign_up_repeat_password"
      android:layout_marginBottom="5dp"
      android:layout_toStartOf="@id/edt_sign_up_repeat_password"
      android:background="@drawable/ic_padlock"/>

    <CheckBox
      android:id="@+id/chk_policy_agreement"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/edt_sign_up_repeat_password"
      android:layout_below="@+id/edt_sign_up_repeat_password"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="25dp"
      android:buttonTint="#f36b00"
      android:text="I Agree to The Terms of Policy"
      android:textColor="#f36b00"/>

    <Button
      android:id="@+id/cancel_sign_up"
      android:layout_width="80dp"
      android:layout_height="40dp"
      android:layout_below="@+id/chk_policy_agreement"
      android:layout_margin="10dp"
      android:background="@drawable/border"
      android:text="cancel"
      android:textColor="#fff"/>

    <Button
      android:id="@+id/btn_lets_go_sign_up"
      android:layout_width="80dp"
      android:layout_height="40dp"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/chk_policy_agreement"
      android:layout_margin="10dp"
      android:background="@drawable/border"
      android:text="let's go"
      android:textColor="#fff"
      android:textStyle="bold"/>
  </RelativeLayout>


</RelativeLayout>
