<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="option_button_style" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">#3d0a7c</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">.5</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:background">@drawable/general_button_style</item>
  </style>

  <style name="category_select_button_style">
    <item name="android:textColor">#fff</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_columnWeight">1</item>
    <item name="android:layout_gravity">fill</item>
    <item name="android:layout_rowWeight">1</item>
  </style>

</resources>
